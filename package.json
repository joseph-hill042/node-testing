{
  "name": "testing",
  "version": "1.0.0",
  "description": "A project for exploring testing suites in Node",
  "main": "index.js",
  "scripts": {
    "dev": "node fuse.js",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts?|tsx?)$": "ts-jest"
    },
    "testRegex": "(src/test/.*|(\\.|/)(test|spec))\\.(ts?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  },
  "author": "Joseph Hill",
  "license": "MIT",
  "devDependencies": {
    "@types/expect": "^1.20.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.10",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.15",
    "@types/supertest": "^2.0.7",
    "expect": "^23.6.0",
    "fuse-box": "^3.6.0",
    "jest": "^23.6.0",
    "mocha": "^5.2.0",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2",
    "uglify-es": "^3.3.9",
    "uglify-js": "^3.4.9"
  },
  "dependencies": {
    "express": "^4.16.4"
  }
}
